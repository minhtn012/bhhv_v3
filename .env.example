# MongoDB Configuration
MONGODB_URI=mongodb://username:password@localhost:27018/bhhv?authSource=admin
DB_NAME=bhhv

# JWT Configuration
# IMPORTANT: Generate strong random secrets in production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
REFRESH_SECRET=your-refresh-secret-key-change-in-production-min-32-chars

# Encryption Configuration
# IMPORTANT: Generate a strong random key for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-change-in-production-min-32-chars

# External API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# Application Environment
NODE_ENV=development

# Logging Configuration
# LOG_LEVEL: Controls which logs are shown (error, warn, info, debug)
# - production: use 'error' or 'warn' to reduce noise
# - development: use 'debug' for detailed logs
LOG_LEVEL=debug

# LOG_HTTP_TO_CONSOLE: Show HTTP request/response logs in console (true/false)
# - Set to false in production to reduce console noise
LOG_HTTP_TO_CONSOLE=true

# ENABLE_DB_LOGGING: Save logs to database (true/false)
# - Set to true to enable audit trail and log analysis
ENABLE_DB_LOGGING=true

# Extra Insurance Packages Configuration
# Comma-separated list of BS package codes to enable as extra/optional packages
# Available codes: BS007, BS008, BS009
# Leave empty to disable extra packages feature
# Example: NEXT_PUBLIC_EXTRA_PACKAGES=BS007,BS008,BS009
NEXT_PUBLIC_EXTRA_PACKAGES=BS007,BS008,BS009

# Pacific Cross Travel Insurance
# Credentials for Pacific Cross portal integration
PACIFIC_CROSS_USERNAME=your_pacific_cross_username
PACIFIC_CROSS_PASSWORD=your_pacific_cross_password
PACIFIC_CROSS_BASE_URL=https://paris.pacificcross.com.vn

# Security Notes:
# 1. Never commit the actual .env file to version control
# 2. Use strong, randomly generated secrets (minimum 32 characters)
# 3. Rotate secrets regularly in production
# 4. Use environment-specific secrets (dev/staging/prod)
# 5. Consider using a secrets management service (AWS Secrets Manager, HashiCorp Vault, etc.)
# Car data path (for Docker volume in prod)
# CAR_BRANDS_PATH=/data/car_brands
