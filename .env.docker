# Docker Environment Configuration for BHHV Project

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://dev:dev123@mongodb:27017/bhhv?authSource=admin

# JWT Configuration (Update these with secure values in production)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# File Upload Settings
MAX_FILE_SIZE=5MB
UPLOAD_DIR=/tmp/uploads

# Logging
LOG_LEVEL=info